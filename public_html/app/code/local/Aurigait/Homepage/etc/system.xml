<?xml version="1.0"?>
<config>
   <sections>
        <ultimo>
            <groups>
                <homepage translate="label">
                    <label>Homepage</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <homepage_cms_block translate="label">
                            <label>Static Block Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1600</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <homepage_layout>0</homepage_layout>
                            </depends>
                        </homepage_cms_block>
                        <homepage_layout translate="label">
                            <label>Enable/Disable Homepage Widget</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1800</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </homepage_layout>
                        <enable_cms translate="label">
                            <label>Enable CMS Home Page Slider</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1900</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_cms> 
                        <center_banner translate="label">
                            <label>Center Banner Row ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1900</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </center_banner>                        
                    </fields>
                </homepage>
            </groups>
        </ultimo>
        <giftcard>
         <groups>
            <general>
               <fields>
                  <gift_cat translate="label">
                            <label>Gift Card Category Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1700</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                  </gift_cat>  
               </fields>
            </general>
         </groups>
        </giftcard>
   </sections>
</config>